<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="28dp"
    tools:context="com.example.pdg.calulatorapi22.Game">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/card11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:scaleType="centerInside"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"

            android:scaleType="centerInside"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:scaleType="centerInside"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:scaleType="centerInside"
            android:layout_weight="3"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/card21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/cardback"
            android:scaleType="centerInside"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"

            android:scaleType="centerInside"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:scaleType="centerInside"
            android:layout_weight="3"/>
        <ImageView
            android:id="@+id/card24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/card34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardback"
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textSize="30sp">


        <Button
            android:id="@+id/restartGame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Restart Game"
            />

        <TextView
            android:id="@+id/scoreScreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:text="Score : 0" />



    </LinearLayout>



</LinearLayout>
